@model IEnumerable<pruebaAuth.Reserva>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
	@Html.ActionLink("Nueva Reserva", "Calendario")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.NombreCliente)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ApellidoCliente)
		</th>
		
		<th>
			@Html.DisplayNameFor(model=>model.NumeroPersonas)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.InstitucionCliente)
		</th>


		<th>
			@Html.DisplayNameFor(model => model.FechaInicio)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.FechaFin)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.EstadoReserva)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.NombreCliente)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.ApellidoCliente)
			</td>
			
			<td>
				@Html.DisplayFor(modelItem => item.NumeroPersonas)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.InstitucionCliente)
			</td>


			<td>
				@Html.DisplayFor(modelItem => item.FechaInicio)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.FechaFin)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.EstadoReserva)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { IdReserva = item.IdReserva }) |
				@Html.ActionLink("Details", "Details", new { IdReserva = item.IdReserva }) |
				@Html.ActionLink("Delete", "Delete", new { IdReserva = item.IdReserva })
			</td>
		</tr>
	}

</table>
